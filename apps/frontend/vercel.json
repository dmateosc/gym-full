{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run frontend:build",
  "outputDirectory": "dist", 
  "installCommand": "npm install",
  "env": {
    "VITE_API_BASE_URL": "https://centro-wellness-sierra-de-gata-backend.vercel.app/api"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "https://centro-wellness-sierra-de-gata-backend.vercel.app/api"
    }
  },
  "rewrites": [
    {
      "source": "/((?!assets).*)",
      "destination": "/index.html"
    }
  ]
}
